<div class="task-board-wrapper flex-70">
  <h2>{{model.boardTitle}}</h2>
  {{#task-list}}
    {{#each tasks as |task|}}
      {{task-list/item id=task.id title=task.title dueDateMs=task.dueDate groupId=task.groupId
        onSave=(action "saveTask") onDelete=(action "confirmDelete") onChangePriority=(action "changePriority")}}
    {{/each}}

    {{#if addNewTaskMode}}
      {{task-list/item groupId=model.groupId addNewMode=addNewTaskMode onAddNew=(action "addTask") 
        cancelAction=(action (mut addNewTaskMode) (not addNewTaskMode)) saveButtonLabel="Add task"}}
    {{else}}
      <div {{action (mut addNewTaskMode) (not addNewTaskMode)}} class="task-board-add-task-button">+ Add Task</div>
    {{/if}}
  {{/task-list}}

  {{#if isConfirmDialogVisible}}
    {{confirm-dialog onConfirm=(action "deleteTask") onCancel=(action "cancelDelete")
      fullscreen="true" clickOutsideToClose="true" title="Confirm delete" confirmButtonLabel="Delete"
      question=(concat "Are you sure you want to delete '" taskTitleToDelete "' ?")}}
  {{/if}}
</div>
