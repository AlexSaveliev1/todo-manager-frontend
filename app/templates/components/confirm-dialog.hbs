{{#paper-dialog onClose=(action "cancel") fullscreen=fullscreen clickOutsideToClose=clickOutsideToClose}}
  {{#paper-dialog-content}}
    <h2 class="md-title">{{title}}</h2>
    <p>{{question}}</p>
  {{/paper-dialog-content}}

  {{#paper-dialog-actions class="layout-row"}}
    <span class="flex"></span>
    {{#paper-button primary=true onClick=(action "cancel")}}{{cancelButtonLabel}}{{/paper-button}}
    {{#paper-button warn=true onClick=(action "confirm")}}{{confirmButtonLabel}}{{/paper-button}}
  {{/paper-dialog-actions}}
{{/paper-dialog}}
